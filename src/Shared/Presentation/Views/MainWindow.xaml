<Window x:Class="MyApp.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp.Presentation.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" d:Title="ZLenght" Height="350" Width="250" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <!-- First GroupBox -->
            <GroupBox Header="Object Types" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="90">
                <StackPanel Margin="10">
                    <CheckBox Content="Lines" IsChecked="{Binding SelectOptions.SelectLines}" />
                    <CheckBox Content="PolyLines" IsChecked="{Binding SelectOptions.SelectPolyLines}" />
                    <CheckBox Content="Arcs" IsChecked="{Binding SelectOptions.SelectArcs}" />
                </StackPanel>
            </GroupBox>

            <!-- Button under the first GroupBox -->
            <Button Content="Select Objects" 
                    Command="{Binding SelectCommand}"
                    Width="120" 
                    Height="30" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="10"/>

            <!-- Second GroupBox -->
            <GroupBox Header="Total Length" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="100" Margin="10">
                <StackPanel Margin="10">
                    <TextBox Text="{Binding TotalLength,FallbackValue=0}" IsReadOnly="True" Width="160"/>
                    <Label Content="{Binding SelectedObjectCount, StringFormat=Selected Items: {0}}" />
                </StackPanel>
            </GroupBox>

            <StackPanel  VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <Button Content="OK" Command="{Binding OkCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="75" Margin="0,0,10,0" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="75" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>